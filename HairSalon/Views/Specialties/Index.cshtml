@{
  Layout = "_Layout";
}
<div class='container'>
  <h2>Specialties</h2>
  @if (@Model.Count == 0)
  {
    <h4>No Specialties have been added yet!</h4>
  }
  @foreach (var specialty in Model)
  {
    <h3><a href='/specialty/@specialty.GetId()'>@specialty.GetSpecialty()</a></h3>
  }
  
  <a href = '/specialty/new'><button class='btn '>Add new specialty</button></a>
  <a href='/stylist'><button class='btn'>View Stylists</button></a>
  <a href = '/client'><button class='btn'>View Clients</button></a>
  <a href='/'><button class='btn'>Home</button></a>
</div>
