@{
  Layout = "_Layout";
}
<div class='container'>
  <h1>Hair Salon: Stylists</h1>
  <hr />
  <h2>Stylists</h2>
  @if (@Model.Count == 0)
  {
    <h4>No stylist have been added yet!</h4>
  }
  @foreach (var stylist in Model)
  {
    <h3><a href='/stylist/@stylist.GetStylistId()'>@stylist.GetStylist()</a></h3>
  }
<a href='/stylist/new'><button class='btn'>Add Stylists</button></a>
<a href = '/client/new'><button class='btn'>Add new client</button></a>
<a href = '/specialty'><button class='btn'>View Specialties</button></a>
<a href = '/client'><button class='btn'>View Clients</button></a>
<a href = '/stylist/delete'><button class='btn'>Delete All Stylists</button></a>
  <a href='/'><button class='btn'>Home</button></a>
</div>
